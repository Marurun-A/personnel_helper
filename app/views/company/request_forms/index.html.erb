<h2>依頼画面</h2>

    <%= button_to "依頼をリセットする", company_destroy_all_request_forms_path, method: :delete %>

      <table>
        <thead>
          <th></th>
          <th>スタッフ名</th>
          <th>フリガナ</th>
          <th>実施可能業務</th>
          <th>勤務日時</th>
          <th>可能な最大勤務時間</th>
          <th>場所</th>
          <th>連絡先</th>
          <th>自己紹介</th>
        </thead>
        <tbody>
          <% @request_forms.each do |request_form| %>
            <tr>
              <td><%#= image_tag request_form.get_image, size: "100x100" %></td>
              <td><%= request_form.request.request_name %></td>
              <td><%= request_form.request.request_kana %></td>
              <td>
                <% request_form.request.tags.each do |tag| %>
                <span><%= tag.tag_name %></span>
                <% end %>
              </td>
              <td>
                <%= request_form.request.date.strftime("%-m月%d日") %><br/>
                <%= request_form.request.start_time.strftime("%H時%M分") %><%= request_form.request.finish_time.strftime("%H時%M分") %>
               </td>
              <td><%= request_form.request.maximum_time %></td>
              <td><%= request_form.request.place %></td>
              <td><%= request_form.request.contact_address %></td>
              <td><%= request_form.request.introduction %></td>
              <td> <%= button_to "削除", company_request_form_path(request_form.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div>
        <%= link_to "依頼を続ける", company_requests_path %>
        <%# if @recruitmentt_forms.present? %>
          <%= link_to "購入に進む", new_company_employment_path, method: :post %>
        <%# end %>
      </div>

