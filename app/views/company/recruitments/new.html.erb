<h4>雇用新規登録</h4>

<% if  @recruitments.errors.any? %>
  <%=  @recruitments.errors.count %>件のエラーが発生しました
  <ul>
    <%  @recruitments.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:  @recruitments, url: '/company/recruitments',  method: :post do |f| %>
  <h6>会社画像</h6>
  <%= f.file_field :image, accept: "image/*" %>
  <h6>会社名</h6>
  <%= f.text_field :name %>
  <h6>フリガナ</h6>
  <%= f.text_field :kana %>
  <h6>業務内容</h6>
  <%= f.text_field :business %>
  <h6>時給</h6>
  <%= f.text_field :hourly_wage %>
   <h6>日付</h6>
  <%= f.date_field :date %>
  <h6>時間</h6>
  <%= f.time_field :time %>
  <h6>場所</h6>
  <%= f.text_field :place %>
  <h6>連絡先</h6>
  <%= f.text_field :contact_address %>
  <h6>雇用説明</h6>
  <%= f.text_area :introduction %>
  <%= f.submit '新規登録' %>
<% end %>