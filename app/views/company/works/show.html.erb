　<div class="col-md-10 ml-sm-auto col-lg-10 px-4">
   <div class="container-fluid">
    <div class="row">
      <div class="col-md-10">
        <h4>スタッフ詳細</h4>
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <p class="card-text">
                  スタッフ名：<%= @work.work_name %>
                </p>
                <p class="card-text">
                  カナ：<%= @work.work_kana %>
                </P>
                <p class="card-text">
                  業務時間：<%= @work.start_time.strftime("%H時%M分")  %> - <%= @work.finish_time.strftime("%H時%M分")  %>
                </P>
                <p class="card-text">
                  勤務時間：<%= @work.hours.strftime("%-H") %>時間
                </P>
                <p class="card-text">
                  出勤開始場所 : <%= @work.whereabouts %>
                </P>
                <p class="card-text">
                  交通手段 : <%= @work.transportation %>
                </P>
                <p class="card-text">
                  連絡先：<%= @work.contact_address %>
                </P>
              </div>
              <div class="col-md-4">
                <p class="card-text">
                自己紹介：<%= @work.introduction %>
                </P>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



　<div class="container-fluid">
  <div class="row">

    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h4>受信依頼確認画面</h4>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>希望勤務日時</th>
                <th>希望勤務時間</th>
                <tH>返答期限</tH>
                <th>リクエストステータス</th>
              </tr>
            </thead>
              <tbody>
                <tr>
                  <td>
                  <%= @work.date.strftime("%-m月%-d日") %>  <%= @work.start_time.strftime("%H時%M分") %> - <%= @work.finish_time.strftime("%H時%M分") %>
                  </td>
                  <td><%= @work.hours.strftime("%-H") if @work.hours %> 時間</td>
                  <td><%= @work.response_deadline.strftime("%-m月%-d日") %></td>
                  <td>
                  <%= form_with model: @work, url: update_status_company_work_path(@work), method: :patch do |f| %>
                  <%= f.select :work_status, Work.work_statuses_i18n, class: "form-control" %>
                  <%= f.submit "更新", class: "btn btn-primary" %>
                  <% end %>
                  </td>
                </tr>
              </tbody>
          </table>
        </div>
      </div>
      </div>
    </div>
  </div>
 </div>