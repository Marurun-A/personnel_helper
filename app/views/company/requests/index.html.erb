<h4>スタッフ一覧</h4>
<p><%= link_to "新規登録", new_company_request_path %></p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>スタッフ名</th>
      <th>カナ</th>
      <th>可能な業務</th>
      <th>業務可能時間</th>
      <th>場所</th>
      <th>連絡先</th>
      <th>自己紹介</th>
    </tr>
  </thead>

　<tbody>
　 <%= form_tag({controller:"requests",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_name, t.tad_name %><%= t.tag_name %></li>
    <% end %>
    <%= submit_tag '検索' %>
  <% end %>
  <% @requests.each do |request| %>
    <tr>
      <td>
        <% if request.image.attached? %>
          <%= image_tag request.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td>
        <%= link_to company_request_path(request.id) do %>
        <%= request.name %>
        <% end %>
       </td>
       <td>
        <%= request.kana %>
       </td>
      <td>
        <% request.tags.each do |tag| %>
        <span><%= tag.tag_name %></span>
        <% end %>
      </td>
      <td>
        <%= request.date %>
        <%= request.start_time %><%= request.finish_time %>
      </td>
      <td><%= request.place %></td>
      <td><%= request.contact_address %></td>
       <td><%= request.introduction %></td>
  <% end %>
  </tbody>
</table>