<h4>新規会員登録</h4>

<%= form_with model: @company, url: company_registration_path do |f| %>
  <%= render "company/shared/error_messages", resource: resource %>

  <div class="field">
    <h6>名前</h6>
    <%= f.label :"（性）" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
    <%= f.label :"（名）" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <h6>フリガナ</h6>
    <%= f.label :"（セイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
    <%= f.label :"（メイ） "%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <h6>メールアドレス</h6>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h6>郵便番号（ハイフンなし）</h6>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <h6>住所</h6>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <h6>電話番号（ハイフンなし）</h6>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <h6>パスワード</h6>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <h6>パスワード（確認用）</h6>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


