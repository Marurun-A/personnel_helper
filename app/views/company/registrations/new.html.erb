<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>新規会員登録</h4>

      <%= form_with model: @company, url: company_registration_path do |f| %>
        <%= render "company/shared/error_messages", resource: resource %>

        <div class="form-grop mt-3">
          <h6>名前</h6>
          <%= f.label :"（性）" %>
          <%= f.text_field :first_name, class: "form-control company_first_name" %>
          <%= f.label :"（名）" %>
          <%= f.text_field :last_name, class: "form-control company_last_name" %>
        </div>

        <div class="form-grop mt-3">
          <h6>フリガナ</h6>
          <%= f.label :"（セイ）" %>
          <%= f.text_field :first_name_kana, class: "form-control company_first_name_kana" %>
          <%= f.label :"（メイ） "%>
          <%= f.text_field :last_name_kana, class: "form-control company_last_name_kana" %>
        </div>

        <div class="form-grop mt-3">
          <h6>郵便番号（ハイフンなし）</h6>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <h6>住所</h6>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <h6>電話番号（ハイフンなし）</h6>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <h6>メールアドレス</h6>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <h6>パスワード</h6>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <h6>パスワード（確認用）</h6>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-secondary" %>
        </div>
      <% end %>


      <%= render "company/shared/links" %>
    </div>
  </div>
</div>

