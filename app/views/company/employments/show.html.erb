
  <div class="col-md-10 ml-sm-auto col-lg-10 px-4">
   <div class="container-fluid">
    <div class="row">
      <div class="col-md-10">
        <h4>スタッフ詳細</h4>
        <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4">
                      <%= image_tag @employment.employment_details.first.request.image, size: "250x250" %>
                    </div>
                    <div class="col-md-3">
                      <p class="card-text">
                        スタッフ名：<%= @employment.employment_details.first.request.request_name %>
                      </p>
                      <p class="card-text">
                        カナ：<%= @employment.employment_details.first.request.request_kana %>
                      </P>
                      <p class="card-text">
                        <% @employment.employment_details.first.request.tags.each do |tag| %>
                      <span>可能な業務：<%= tag.tag_name %></span>
                      <% end %>
                      </P>
                      <p class="card-text">
                        受付期間：<%= @employment.employment_details.first.request.start_date.strftime("%-m月%d日") %> - <%= @employment.employment_details.first.request.finish_date.strftime("%-m月%d日") %>
                      </P>
                      <p class="card-text">
                        業務可能時間：<%= @employment.employment_details.first.request.start_time.strftime("%H時%M分")  %> - <%= @employment.employment_details.first.request.finish_time.strftime("%H時%M分")  %>
                      </P>
                      <p class="card-text">
                        可能な最大業務時間：<%= @employment.employment_details.first.request.maximum_time.strftime("%-H") %>時間
                      </P>
                      <p class="card-text">
                        出勤開始場所：<%= @employment.employment_details.first.request.place %>
                      </P>
                      <p class="card-text">
                        連絡先：<%= @employment.employment_details.first.request.contact_address %>
                      </P>
                    </div>
                    <div class="col-md-3">
                      <p class="card-text">
                      自己紹介：<%= @employment.employment_details.first.request.introduction %>
                      </P>

                    </div>
                  </div>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>








<div class="container-fluid">
  <div class="row">

    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h4>勤務詳細</h4>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>雇用場所</th>
                <th>勤務日時</th>
                <th>勤務時間</th>
                <th>時給</th>
                <th>業務説明</th>
                <tH>返答期限</tH>
                <th>リクエストステータス</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td><%= @employment.place_of_employment %></td>
                  <td>
                  <%= @employment.date.strftime("%-m月%-d日") %><%= @employment.start_time.strftime("%H時%M分") %> <%= @employment.finish_time.strftime("%H時%M分") %>
                  </td>
                  <td><%= @employment.hours.strftime("%-H") %>時間</td>
                  <td><%= @employment.hourly_wage %></td>
                  <td><%= @employment.introduction %></td>
                  <td><%= @employment.response_deadline.strftime("%-m月%-d日") %></td>
                  <td><%= I18n.t("enums.employment.employment_status.#{@employment.employment_status}") %></td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
      </div>
    </main>
  </div>
 </div>




