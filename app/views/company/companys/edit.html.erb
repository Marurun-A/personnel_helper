<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>登録情報編集</h1>

      <%= form_with model: @company, url: company_company_path(@company.id), method: :patch do |f| %>

        <div class="form-grop mt-3">
          <h6>氏名</h6>
          <%= f.text_field :first_name, class: "form-control company_first_name" %>
          <%= f.text_field :last_name, class: "form-control company_last_name" %>
        </div>

        <div class="form-grop mt-3">
          <h6>フリガナ</h6>
            <%= f.text_field :first_name_kana, class: "form-control company_first_name_kana" %>
            <%= f.text_field :last_name_kana, class: "form-control company_last_name_kana" %>
        </div>

        <div class="form-grop mt-3">
          <h6>郵便番号（ハイフンなし）</h6>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="form-grop mt-3">
          <h6>住所</h6>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <h6>電話番号（ハイフンなし）</h6>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <h6>メールアドレス</h6>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-grop mt-3">
          <%= f.submit '編集内容を保存', class: "btn btn-secondary" %>
        </div>
        <% end %>

      <div>
      <%= link_to "退会する", company_companys_information_unsubscribe_path(current_company), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
