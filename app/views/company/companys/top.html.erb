<h4>マイページ</h4>

<h4>
  <%= link_to "雇用要請履歴", company_employments_path(current_company) %>
</h4>

<h4>
  <%= link_to "スタッフからの依頼", company_works_path(current_company) %>
</h4>

<h4>
  <%= link_to "ユーザー情報", company_company_path(current_company) %>
</h4>
<h4>
  <%= link_to "雇用登録情報", company_recruitments_path(current_company) %>
</h4>



<h4>返答まちの勤務希望依頼</h4>
 <table>
    <thead>
      <th>スタッフ名</th>
      <tH>返答期限</tH>
      <th>リクエストステータス</th>
    </thead>
      <tbody>
      <% @employments.each do |employment| %>
        <tr>
          <td>
            <%= link_to company_employment_path(employment.id) do %>
            <%= employment.employment_details.first.request.request_name %>
            <% end %>
          <td><%= employment.response_deadline.strftime("%-m月%-d日") %></td>
          <td><%= I18n.t("enums.employment.employment_status.#{employment.employment_status}") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<h4>返答していない勤務希望依頼</h4>
 <table>
  <thead>
      <th>依頼者名</th>
      <tH>返答期限</tH>
      <th>リクエストステータス</th>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
      <td>
        <%= link_to company_work_path(work.id) do %>
        <%= work.work_name %>
        <% end %>
        </td>
      <td><%= work.response_deadline.strftime("%-m月%-d日") %></td>
      <td></td>
      <td><%= I18n.t("enums.work.work_status.#{work.work_status}") %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

