<h4>マイページ</h4>

<div class="container-fluid">
  <div class="row">
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-9">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
             <div class="row">
              <div class="col-md-4">
                <h4>通知情報</h4>
                <p class="card-text">
                　<% if current_company.company_notifications.where(read: false).any? %>
                    直近5件の通知を表示しています
                    <% current_company.company_notifications.where(read: false).limit(5).order(created_at: :desc).each do |notification| %>
                      <%= link_to notification_message(notification), notification_path(notification), method: :patch %>
                  <% end %>
                  <% else %>
                    通知はありません
                  <% end %>
                </p>
              </div>
             </div>
           </div>
         </div>
        </div>
        <% company = @companys %>
         <div class="col-md-9">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
             <div class="row">
              <div class="col-md-4">
                <h4>ログインユーザー</h4>
                <p class="card-text">
                 氏名 <%= company.first_name %><%= company.last_name %>
                </p>
                 <% if company.email != "guest_company@example.com" %>
                  <%= link_to "ユーザー情報へ", company_company_path(current_company) %>
                 <% end %>
              </div>
             </div>
           </div>
         </div>
       </div>
       <div class="row">
        <div class="col-md-4">
        <h4>返答まちの勤務希望依頼</h4>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>スタッフ名</th>
                  <th>返答期限</th>
                  <th>リクエストステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @employments.each do |employment| %>
                <tr>
                  <td>
                    <%= link_to company_employment_path(employment.id) do %>
                    <%= employment.employment_details.first.request.request_name %>
                    <% end %>
                  </td>
                  <td><%= employment.response_deadline.strftime("%-m月%-d日") %></td>
                  <td><%= I18n.t("enums.employment.employment_status.#{employment.employment_status}") %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-4">
        <h4>返答していない勤務希望依頼</h4>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>依頼者名</th>
                  <th>返答期限</th>
                  <th>リクエストステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @works.each do |work| %>
                <tr>
                  <td>
                    <%= link_to company_work_path(work.id) do %>
                    <%= work.work_name %>
                    <% end %>
                  </td>
                  <td><%= work.response_deadline.strftime("%-m月%-d日") %></td>
                  <td><%= I18n.t("enums.work.work_status.#{work.work_status}") %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
 </div>
