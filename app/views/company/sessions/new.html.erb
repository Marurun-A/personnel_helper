
<div class="sidenav">
         <div class="login-main-text">
            <h2>ログイン</h2>
         </div>
      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
               <form>
                  <div class="form-group">
                     <label>Email</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                     <label>Password</label>
                     <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control",  placeholder: "Password" %>
                  </div>
                   <%= f.submit "Log in", class: "btn btn-black" %>
                   <%= render "company/shared/links", class: "btn btn-secondary" %>
               </form>
              <% end %>
            </div>
         </div>
      </div>