<h4>スタッフ一覧</h4>
<p><%= link_to "新規登録", new_staff_request_path %></p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>スタッフ名</th>
      <th>カナ</th>
      <th>可能な業務</th>
      <th>受付期間</th>
      <th>業務可能時間</th>
       <th>最大業務時間</th>
      <th>場所</th>
      <th>連絡先</th>
      <th>自己紹介</th>
    </tr>
  </thead>

　<tbody>
  <% @requests.each do |request| %>
    <tr>
      <td>
        <% if request.image.attached? %>
          <%= image_tag request.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td>
        <%= link_to staff_request_path(staff_id: request.staff_id, id: request.id) do %>
        <%= request.request_name %>
        <% end %>
       </td>
       <td>
        <%= request.request_kana %>
       </td>
      <td>
        <% request.tags.each do |tag| %>
        <span><%= tag.tag_name %></span>
        <% end %>
      </td>
      <td><%= request.start_date.strftime("%-m月%d日") %><%= request.finish_date.strftime("%-m月%d日") %></td>
      <td><%= request.start_time.strftime("%H時%M分") %><%= request.finish_time.strftime("%H時%M分") %></td>
      <td><%= request.maximum_time.strftime("%-H") %></td>
      <td><%= request.place %></td>
      <td><%= request.contact_address %></td>
       <td><%= request.introduction %></td>
  <% end %>
  </tbody>
</table>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @requests.each do |request| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <% if request.image.attached? %>
              <%= image_tag request.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %>

        <!--<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">-->

          <div class="card-body">
            <p class="card-text">
              <%= link_to staff_request_path(staff_id: request.staff_id, id: request.id) do %>
              会社名：<%= request.request_name %>
              <% end %>
            </p>
            <p class="card-text">
              カナ：<%= request.request_kana %>
            </P>
            <p class="card-text">
              <% request.tags.each do |tag| %>
            <span>業務内容：<%= tag.tag_name %></span>
            <% end %>
            </P>
            <p class="card-text">
              募集期間：<%= request.start_date.strftime("%-m月%d日") %><%= request.finish_date.strftime("%-m月%d日") %>
            </P>
            <p class="card-text">
              業務時間：<%= request.start_time.strftime("%H時%M分")  %><%= request.finish_time.strftime("%H時%M分")  %>
            </P>
            <p class="card-text">
              最大勤務時間：<%= request.maximum_time.strftime("%-H") %>時間
            </P>
            <p class="card-text">
              勤務場所：<%= request.place %>
            </P>
            <p class="card-text">
              連絡先：<%= request.contact_address %>
            </P>
            <p class="card-text">
              業務詳細：<%= request.introduction %>
            </P>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>