<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="sidenav">
             <div class="login-main-text">
               <div>
                 <h2>ログイン</h2>
               </div>
                 <div class="main">
                   <div class="col-md-6 col-sm-12">
                     <div class="login-form">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          <div class="form-group">
                            <label>Email</label>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                          </div>
                          <div class="form-group">
                             <label>Password</label>
                            <%= f.password_field :password, autocomplete: "current-password" %>
                          </div>
                       <%= f.submit "Log in", class: "btn btn-black" %>
                       <%= render "staff/shared/links", class: "btn btn-secondary" %>
                   </form>
                  <% end %>
                </div>
             </div>
          </div>
      </div>
  </div>
</div>







