<div class="container-fluid">
  <div class="row">

    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h4>送信依頼一覧</h4>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <th>会社名</th>
              <th>フリガナ</th>
              <th>通勤開始場所</th>
              <th>希望勤務日時</th>
              <th>希望勤務時間</th>
              <th>希望交通手段</th>
              <th>返答期限</th>
              <th>リクエストステータス</th>
            </thead>
            <tbody>
              <% @works.each do |work| %>
                <tr>
                  <td>
                    <%= link_to staff_work_path(work.id) do %>
                    <%= work.work_details.first.recruitment.recruitment_name %>
                    <% end %>
                  </td>
                  <td><%= work.work_details.first.recruitment.recruitment_kana %></td>
                  <td><%= work.whereabouts %></td>
                  <td>
                    <%= work.date.strftime("%-m月%-d日") %>  <%= work.start_time.strftime("%H時%M分") %> - <%= work.finish_time.strftime("%H時%M分") %>
                  </td>
                  <td><%= work.hours.strftime("%-H") if work.hours %> 時間</td>
                  <td><%= work.transportation %></td>
                  <td><%= work.response_deadline.strftime("%-m月%-d日") %></td>
                  <td><%= I18n.t("enums.work.work_status.#{work.work_status}") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>
      </div>
    </div>
  </div>
 </div>




