<h2>依頼情報入力</h2>

  <div class="container">
      <div class="panel panel-default">
        <div class="panel-body">

          <% if @works.errors.any? %>
          <%= @works.errors.count %>件のエラーが発生しました
          <ul>
            <% @works.errors.full_messages.each do |message| %>
          <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>

          <%= form_with model: @works, url: '/staff/works/confirm',  method: :post do |f| %>
            <h4>支払方法</h4>
              <div class="form-group">
                <%= f.radio_button :payment_method, "cash" %>
                <%= f.label :payment_method_cash, "現金払い", checked: "checked" %>
              </div>
              <div class="form-group">
                <%= f.radio_button :payment_method, "transfer" %>
                <%= f.label :payment_method_transfer, "銀行振込" %>
              </div>
            <h4>依頼詳細入力</h4>
            <table class="table">
              <tbody>
                  <thead>
                  <th>名前</th>
                  <th>フリガナ</th>
                  <th>通勤開始場所</th>
                  <th>希望勤務日時</th>
                  <th>希望勤務時間</th>
                  <th>希望交通手段</th>
                  <th>自己紹介</th>
                  <th>連絡先</th>
                  <tH>返答期限</tH>
              </thead>
              <tbody>
              <td><%= f.text_field :work_name, class: "form-control" %></td>
              <td><%= f.text_field :work_kana, class: "form-control" %></td>
              <td><%= f.text_field :whereabouts, class: "form-control" %></td>
              <td>
              <%= f.date_field :date, class: "form-control" %><%= f.time_field :start_time, class: "form-control" %><%= f.time_field :finish_time, class: "form-control" %>
              </td>
              <td><%= f.number_field :hours, in: 1..10, class: "form-control" %>時間</td>
              <td><%= f.text_field :transportation, class: "form-control" %></td>
              <td><%= f.text_field :introduction, class: "form-control" %></td>
              <td><%= f.text_field :contact_address, class: "form-control" %></td>
              <td><%= f.date_field :response_deadline, class: "form-control" %></td>

              </tbody>
            </table>
          <%= f.submit '確認画面に進む' %>
          <% end %>
          </div>
      </div>
    </div>