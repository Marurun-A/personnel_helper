<h2>依頼情報入力</h2>
<%= form_with model: @works, url: '/staff/works/confirm',  method: :post do |f| %>
  <h3>支払方法</h3>
    <%= f.radio_button :payment_method, "cash" %>
    <%= f.label :payment_method_cash, "現金払い", checked: "checked" %>
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method_transfer, "銀行振込" %>
  <h3>依頼詳細入力</h3>
  <table>
    <tbody>
        <thead>
        <th>名前</th>
        <th>フリガナ</th>
        <th>通勤開始場所</th>
        <th>希望勤務日時</th>
        <th>希望勤務時間</th>
        <th>希望交通手段</th>
        <th>自己紹介</th>
        <th>連絡先</th>
        <tH>返答期限</tH>
    </thead>
    <tbody>
    <td><%= f.text_field :work_name %></td>
    <td><%= f.text_field :work_kana %></td>
    <td><%= f.text_field :whereabouts %></td>
    <td>
    <%= f.date_field :date %><%= f.time_field :start_time %><%= f.time_field :finish_time %>
    </td>
    <td><%= f.number_field :hours, in: 1..10 %>時間</td>
    <td><%= f.text_field :transportation %></td>
    <td><%= f.text_field :introduction %></td>
    <td><%= f.text_field :contact_address %></td>
    <td><%= f.date_field :response_deadline %></td>
　　<td
    </tbody>
  </table>

<%= f.submit '確認画面に進む' %>
<% end %>