<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h4>依頼情報入力</h4>
       <% if @work.errors.any? %>
        <%= @work.errors.count %>件のエラーが発生しました
        <ul>
          <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
       <% end %>
        <%= form_with model: @work, url: '/staff/works/confirm',  method: :post do |f| %>
          <div class="row">
            <div class="col-6">
            <h4>支払方法</h4>
            <div class="form-group">
            <%= f.radio_button :payment_method, "cash" %>
            <%= f.label :payment_method_cash, "現金払い", checked: "checked" %>
            </div>
            <div class="form-group">
            <%= f.radio_button :payment_method, "transfer" %>
            <%= f.label :payment_method_transfer, "銀行振込" %>
            </div>
          </div>
        </div>
        <h4>依頼詳細入力</h4>
        <div class="row">
          <div class="col-6">
           <p>名前</p>
           <%= f.text_field :work_name, class: "form-control" %>
           <p>フリガナ</p>
           <%= f.text_field :work_kana, class: "form-control" %>
           <p>通勤開始場所</p>
           <%= f.text_field :whereabouts, class: "form-control" %>
           <p>希望勤務日時</p>
           <%= f.date_field :date, class: "form-control" %>
           <p>希望勤務時間</p>
           <%= f.time_field :start_time, class: "form-control" %><%= f.time_field :finish_time, class: "form-control" %>
           <p>希望労働時間</p>
           <%= f.number_field :hours, in: 1..10, class: "form-control" %>時間
          </div>
          <div class="col-6">
           <p>希望交通手段</p>
           <%= f.text_field :transportation, class: "form-control" %>
           <p>連絡先</p>
           <%= f.text_field :contact_address, class: "form-control" %>
           <p>返答期限</p>
           <%= f.date_field :response_deadline, class: "form-control" %>
           <p>自己紹介</p>
           <%= f.text_field :introduction, class: "form-control" %>
           <%= f.hidden_field :company_id,  value: @work.company_id %>
           <%= f.submit '確認画面に進む' %>
           <% end %>
          </div>
      </div>
    </div>
  </div>
</div>