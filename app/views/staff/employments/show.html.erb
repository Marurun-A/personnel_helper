<div class="col-md-10 ml-sm-auto col-lg-10 px-4">
   <div class="container-fluid">
    <div class="row">
      <div class="col-md-10">
        <h4>会社からの依頼詳細</h4>
        <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <div class="row">

                    <div class="col-md-4">
                      <p class="card-text">
                        会社名：<%= @employment.employment_name %>
                      </p>
                      <p class="card-text">
                        カナ：<%= @employment.employment_kana %>
                      </P>
                      <p class="card-text">
                        業務時間：<%= @employment.start_time.strftime("%H時%M分")  %> - <%= @employment.finish_time.strftime("%H時%M分")  %>
                      </P>
                      <p class="card-text">
                        勤務場所：<%= @employment.place_of_employment %>
                      </P>
                      <p class="card-text">
                        連絡先：<%= @employment.contact_address %>
                      </P>
                    </div>
                    <div class="col-md-4">
                      <p class="card-text">
                      時給：<%= @employment.hourly_wage %>
                      </P>
                      <p class="card-text">
                      業務詳細：<%= @employment.introduction %>
                      </P>
                    </div>
                  </div>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="container-fluid">
  <div class="row">

    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h4>雇用一覧</h4>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
                <thead>
                  <th>勤務日時</th>
                  <th>勤務時間</th>
                  <th>時給</th>
                  <tH>返答期限</tH>
                  <th>リクエストステータス</th>
                </thead>
                <tbody>
                  <tr>
                    <td>
                    <%= @employment.date.strftime("%-m月%-d日") %>  <%= @employment.start_time.strftime("%H時%M分") %> - <%= @employment.finish_time.strftime("%H時%M分") %>
                    </td>
                    <td><%= @employment.hours.strftime("%-H") %>時間</td>
                    <td><%= @employment.hourly_wage %></td>
                    <td><%= @employment.response_deadline.strftime("%-m月%-d日") %></td>
                    <td>
                     <%= form_with model: @employment, url: update_status_staff_employment_path(@employment), method: :patch do |f| %>
                     <%= f.select :employment_status, Employment.employment_statuses_i18n, class: "form-control" %>
                     <%= f.submit "更新", class: "btn btn-primary" %>
                     <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
      </div>
      </div>
    </main>
  </div>
 </div>